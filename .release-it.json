{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",

  "github": {
    "release": true,
    "releaseName" : "sga@v${version}",
    "assets": [".output/sga@v${version}.zip"],
    "releaseNotes": ""
  },

  "hooks": {
    "before:release": "npm run zip && echo Releasing version ${version}"
  },

  "npm": {
    "skipVersion": true
  },

  "git": {
    "requireCleanWorkingDir": false
  }
}
